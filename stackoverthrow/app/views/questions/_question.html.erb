<div class="question">
  <%= render 'votes/vote' %>
  <h3><%= @question.title %></h3>
  <p><%= @question.text %></p>

  <ul class="edit_buttons">
    <li>
      <%= button_to "Delete", question_path, :method => :delete %>
    </li>
    <li><%= button_to "Edit", edit_question_path(@question), :method => :get %>
    </li>
  </ul>

  <span class="answer_button"><%= button_to "Answer", new_question_answer_path(@question), :method => :get %></span>
</div>