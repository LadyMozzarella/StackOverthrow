<div class= "ask_answer">
  <ul>
    <%= form_for @question do |f| %>
      <li class="title_input"><h4><%= f.label :title  %></h4>
      <%= f.text_field :title  %></li>
      <h4><li class="text_input"><%= f.label :text  %></h4>
      <%= f.text_area :text  %></li>
      <li class="text_submit"><%= f.submit "Ask" %></li>
    <% end %>
  </ul>
</div>

